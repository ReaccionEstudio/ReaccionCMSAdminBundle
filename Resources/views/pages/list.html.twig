{% extends '@ReaccionCMSAdminBundle/base.html.twig' %}

{% block reaccion_cms_admin_body %}
<div class="my-3 my-md-5">

  	<div class="container">

  		<div class="page-header">
    		<div class="col pl-0">
	    		<h1 class="page-title">Pages list</h1>
	    	</div>
    		<div class="col col-lg-2 row justify-content-end">
    			<a href="{{ url('reaccion_cms_admin_pages_create') }}" class="btn btn-primary">
    				<i class="fe fe-plus"></i>&nbsp;&nbsp;Create new page
    			</a>
    		</div>
	    </div>

  		<div class="row row-cards">

  			<div class="col-12">
                <div class="card">

                	{% embed '@ReaccionCMSAdminBundle/shared/crud/listCardHeader.html.twig' with { 'result' : pages } %}{% endembed %}

                  	{% embed '@ReaccionCMSAdminBundle/shared/flash_messages.html.twig' %}{% endembed %}

                  	<div class="table-responsive">
	                    
	                    <table class="table card-table table-vcenter text-nowrap">

	                    	<thead>
	                        	<tr>
		                          	<th class="w-1">Id</th>
		                          	<th>Name</th>
		                          	<th>Is enabled</th>
		                          	<th>Created at</th>
		                          	<th>Updated at</th>
		                          	<th></th>
	                        	</tr>
	                      	</thead>

	                      	<tbody>

	                      		{% for page in pages %}
		                        <tr>
		                          
		                          <td>
		                          	<a href="{{ url('reaccion_cms_admin_pages_detail', { 'page' : page.id }) }}" title="{{ page.id }}" class="text-inherit">
		                          		<span class="text-muted">{{ page.id }}</span>
		                          	</a>
		                          </td>
		                          
		                          <td width="40%">
		                          	<a href="{{ url('reaccion_cms_admin_pages_detail', { 'page' : page.id }) }}" title="{{ page.name }}" class="text-inherit">{{ page.name }}</a>
		                          </td>
		                          
		                          <td>
		                            {% if page.isEnabled %}
		                          	<span class="status-icon bg-success"></span> Enabled
		                          	{% else %}
		                          	<span class="status-icon bg-danger"></span> Disabled
		                          	{% endif %}
		                          </td>
		                          
		                          <td>
		                          	{% if page.createdAt %}
		                            	{{ page.createdAt | date('d/m/Y H:i:s') }}
		                            {% endif %}
		                          </td>
		                          
		                          <td>
		                          	{% if page.updatedAt %}
		                            	{{ page.updatedAt | date('d/m/Y H:i:s') }}
		                            {% endif %}
		                          </td>

		                          <td class="text-right">
		                            <a class="icon" href="{{ url('reaccion_cms_admin_pages_detail', { 'page' : page.id }) }}" title="{{ page.id }}" data-toggle="tooltip" data-placement="top" title="Edit">
		                              <i class="fe fe-edit"></i>
		                            </a>
		                            &nbsp;
		                            <a class="icon" href="javascript:void(0)" data-toggle="tooltip" data-placement="top" title="Delete">
		                              <i class="fe fe-trash"></i>
		                            </a>
		                          </td>

	                        	</tr>
	                        	{% endfor %}

	                      	</tbody>
                    	</table>

                  	</div>

                  	{% embed '@ReaccionCMSAdminBundle/shared/crud/listCardFooter.html.twig' with { 'result' : pages } %}{% endembed %}
                  	
                </div>

            </div>

  		</div>

  	</div>

</div>
{% endblock %}