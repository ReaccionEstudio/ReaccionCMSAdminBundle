{% extends '@ReaccionCMSAdminBundle/base.html.twig' %}

{% block reaccion_cms_admin_body %}

<div class="my-3 my-md-5">

	<div class="container">

		<div class="page-header">
			<div class="col pl-0">
				{% if mode == 'create' %}
				<h1 class="page-title">{{ 'page_translation_group_form.title' | trans }}</h1>
				{% elseif(mode == 'edit') %}
				<h1 class="page-title">{{ 'page_translation_group_form.detail_title' | trans({ '%name%' : pageTranslationGroup.name }) }}</h1>
				{% endif %}
			</div>
		</div>

		{{ form_start(form, { 'attr': { 'class' : 'card' } }) }}

			<div class="card-header">
				{% if mode == 'create' %}
				<h3 class="card-title">{{ 'page_translation_group_form.title' | trans }}</h3>
				{% elseif(mode == 'edit') %}
				<h3 class="card-title">{{ 'page_translation_group_form.detail_title' | trans({ '%name%' : pageTranslationGroup.name }) }}</h3>
				{% endif %}
			</div>

			<div class="card-body col-8 align-self-center">
		 
        		{% embed '@ReaccionCMSAdminBundle/shared/flash_messages.html.twig' with { 'extraClasses' : 'pl-0 pr-0' } %}{% endembed %}

			  {{ form_widget(form) }}

		  	</div>

			<div class="card-footer text-right">
	    	   <div class="d-flex">
	          	<a href="{{ url('reaccion_cms_admin_pages_index') }}" class="btn btn-link">{{ 'crud.cancel' | trans }}</a>
	          	<button type="submit" class="btn btn-primary ml-auto">{{ 'crud.send_data' | trans }}</button>
	        	</div>
	      	</div>

    	{{ form_end(form) }}

    	{% if mode == 'edit' %}

    		{% embed '@ReaccionCMSAdminBundle/pages/translation_groups/pages.html.twig' %}{% endembed %}

    	{% endif %}

	</div>

</div>

{% endblock %}