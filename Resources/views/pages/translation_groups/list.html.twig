<div class="page-header">
	<div class="col pl-0">
		<h1 class="page-title">{{ 'pages_list.translation_group_title' | trans }}</h1>
	</div>
	<div class="col col-lg-6 row justify-content-end">
		<a href="{{ url('reaccion_cms_admin_create_page_translation_group') }}" class="btn btn-info">
			<i class="fe fe-plus"></i>&nbsp;&nbsp;{{ 'pages_list.create_new_page_trans_group' | trans }}
		</a>
	</div>
</div>

<div class="row row-cards">

	<!-- translation groups -->
	<div class="col-12">
        <div class="card">
            <div class="card-body">

                {% for group in translationGroups %}
                <div class="btn-group mr-4">
                  <a href="{{ url('reaccion_cms_admin_update_page_translation_group', { 'pageTranslationGroup' : group.id }) }}" role="button" class="btn btn-secondary">{{ group.name }}</a>
                  <button data-click="href" data-url="{{ url('reaccion_cms_admin_update_page_translation_group', { 'pageTranslationGroup' : group.id }) }}" type="button" class="btn btn-secondary text-primary">
                    <i class="fe fe-edit"></i>
                  </button>
                  <button href="{{ url('reaccion_cms_admin_remove_page_translation_group', { 'pageTranslationGroup' : group.id }) }}" type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="{{ 'crud.remove' | trans }}" data-detele-confirm="true">
                    <i class="fe fe-trash-2 text-danger"></i>
                  </button>
                </div>
                {% endfor %}

            </div>
        </div>
    </div>

</div>