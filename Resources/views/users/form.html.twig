{% extends '@ReaccionCMSAdminBundle/base.html.twig' %}

{% block reaccion_cms_admin_body %}

<div class="my-3 my-md-5">

  	<div class="container">

  		{{ form_start(form, { 'attr': { 'class' : 'card' } }) }}

		<div class="card-header">
			<h3 class="card-title">{{ 'users_form.title' | trans }}</h3>
		</div>

		<div class="card-body col-8 align-self-center">
			{{ form_widget(form) }}
		</div>

		<div class="card-footer text-right">
	        <div class="d-flex">
	          <a href="{{ url('reaccion_cms_admin_users_index') }}" class="btn btn-link">{{ 'crud.cancel' | trans }}</a>
	          <button type="submit" class="btn btn-primary ml-auto">{{ 'crud.send_data' | trans }}</button>
	        </div>
	    </div>

        {{ form_end(form) }}

	</div>

</div>

{% endblock %}