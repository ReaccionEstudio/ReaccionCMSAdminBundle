		    	</div>
		    	<div class="mt-3 text-muted">
		    		{{ 'crud.created_at' | trans }} {{ media.createdAt | date('d/m/Y H:i:s') }}
		    	</div>
		  	</div>
		</div>
		{% endif %}

		<!-- medium image -->
		{% if media.mediumPath is not empty %}
