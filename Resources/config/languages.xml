<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="reaccion_cms.languages.list_controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Languages\LanguageListController" public="true">
        </service>

        <service id="reaccion_cms.languages.create_controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Languages\CreateLanguageController" public="true">
            <argument type="service" id="translator" />
            <argument type="service" id="reaccion_cms.manager.language" />
        </service>

        <service id="reaccion_cms.languages.update_controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Languages\EditLanguageController" public="true">
            <argument type="service" id="translator" />
            <argument type="service" id="reaccion_cms.manager.language" />
        </service>

    </services>

</container>