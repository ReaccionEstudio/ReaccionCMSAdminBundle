<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

    	<!-- entries -->
    	<service id="reaccion_cms.create_entry.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Entries\CreateEntryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
			<argument type="service" id="translator" />
    	</service>

    	<service id="reaccion_cms.entries_list.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Entries\EntriesListController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
			<argument type="service" id="parameter_bag" />
		</service>

    	<service id="reaccion_cms.remove_entry.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Entries\RemoveEntryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
			<argument type="service" id="translator" />
    	</service>

    	<service id="reaccion_cms.update_entry.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\Entries\UpdateEntryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
			<argument type="service" id="translator" />
    	</service>

    	<!-- entries categories -->
    	<service id="reaccion_cms.list_entries_categories.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\EntriesCategories\EntriesCategoriesListController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
			<argument type="service" id="parameter_bag" />
		</service>
    	
    	<service id="reaccion_cms.create_entries_category.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\EntriesCategories\CreateEntriesCategoryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
    		<argument type="service" id="translator" />
    	</service>
    	
    	<service id="reaccion_cms.update_entries_category.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\EntriesCategories\UpdateEntriesCategoryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
    		<argument type="service" id="translator" />
    	</service>
    	
    	<service id="reaccion_cms.remove_entries_category.controller" class="ReaccionEstudio\ReaccionCMSAdminBundle\Controller\EntriesCategories\RemoveEntriesCategoryController" public="true">
			<call method="setContainer">
				<argument type="service" id="Psr\Container\ContainerInterface" />
			</call>
    		<argument type="service" id="translator" />
    	</service>

    </services>

</container>
